@model kayaseker.WebUI.ViewModels.MemberPictureVM
@{
    Layout = null;
}
<!DOCTYPE HTML>

<html lang="en">
<head>
    <title>Istanbul</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no">
    <link type="text/css" href="~/assets/istanbul2/style.css" rel="stylesheet" media="all" />
    <link type="text/css" href="~/assets/istanbul2/media-queries.css" rel="stylesheet" />
    <link type="text/css" href="~/assets/istanbul2/mediaelementplayer.css" rel="stylesheet" />
    <link rel="stylesheet" type='text/css' href='http://fonts.googleapis.com/css?family=Open+Sans:400,400italic,300italic,300,700,700italic|Open+Sans+Condensed:300,700'>

    <!--[if IE 9]>

    <link href="~/style/css/ie8.css" type="text/css" rel="stylesheet" media="all"/>
    <link href="~/style/css/ie9.css" type="text/css" rel="stylesheet" media="all" />

    <link rel="stylesheet" type="text/css" href="style/css/ie9.css" media="all">
    <![endif]-->
    <script src="~/assets/istanbul2/js/ddsmoothmenu.js"></script>
    <script src="~/assets/istanbul2/js/jquery-1.7.2.min.js"></script>
    <script src="~/assets/istanbul2/js/jquery.backstretch.min.js"></script>
    <script src="~/assets/istanbul2/js/jquery.dcflickr.1.0.js"></script>
    <script src="~/assets/istanbul2/js/jquery.fitvids.js"></script>
    <script src="~/assets/istanbul2/js/jquery.masonry.min.js"></script>
    <script src="~/assets/istanbul2/js/mediaelement.min.js"></script>
    <script src="~/assets/istanbul2/js/mediaelementplayer.min.js"></script>
    <script src="~/assets/istanbul2/js/retina.js"></script>
    <script src="~/assets/istanbul2/js/scripts.js"></script>
    <script src="~/assets/istanbul2/js/selectnav.js"></script>
    <script src="~/assets/istanbul2/js/twitter.min.js"></script>
    <script>$.backstretch("/images/blur.jpg");</script>
</head>
<body class="single">

    <div class="scanlines"></div>
    <div style="width: 115px;margin:auto;position:relative;">
        <img src="~/HeaderAssets/img/71.png" style="width: 115px;margin:auto;position:relative;">
    </div>
    <div class="header-wrapper opacity">
        <div class="header">
            <div class="logo"> <a asp-controller="home" asp-action="index"><h1>   ANASAYFA <i class="fa fa-heart text-white"></i></h1></a></div>
            <div id="menu-wrapper">
                <div id="menu-wrapper">
                    <div id="menu" class="menu">
                        <ul id="tiny">
                            <li>
                                <a asp-area="default" asp-controller="Home" asp-action="Harita">Harita</a>
                            </li>
                            <li>
                                <a asp-area="default" asp-controller="Home" asp-action="Yapilar">Yapılar</a>
                            </li>
                            <li>
                                <a asp-area="default" asp-controller="Home" asp-action="Unity">Oyun</a>
                            </li>
                            @{
                                if (User.Identity.IsAuthenticated && User.Claims.FirstOrDefault(f => f.Type == System.Security.Claims.ClaimTypes.Role).Value == "uye")
                                {
                                    <li>
                                        <a asp-action="Profil" asp-area="uye">@User.Claims.FirstOrDefault(f => f.Type == System.Security.Claims.ClaimTypes.Name).Value</a>
                                    </li>
                                    <li>
                                        <a asp-action="Cikis">Çıkış Yap</a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a asp-action="Login">Giriş Yap</a>
                                    </li>
                                    <li>
                                        <a asp-action="Kayit">Kayıt Ol</a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>

    <div class="wrapper">
        <div class="intro">@Model.MediaPicture.Title</div>
        <div class="intro"><a asp-action="uyeprofil" asp-route-id="@Model.MediaPicture.contentID">  @Model.MediaPicture.Owner </a></div>
        <div class="main-image">
            <div class="outer">
                <span class="inset">
                    <img src="~/medya/@Model.MediaPicture.ImageData" alt="">
                </span>
            </div>
        </div>
        <div class="content">
            <div class="post format-image box">
                <div class="details"> <span class="icon-image">@Model.MediaPicture.LogDate</span> <span class="likes"><a href="#" class="likeThis">@Model.MediaPicture.Like</a></span> <span class="comments"><a href="#">0</a></span> </div>
                <h1 class="title">@Model.MediaPicture.Title</h1>
                <p>@Model.MediaPicture.Description</p>
                <div class="tags"><a href="#">Istanbul</a>, <a href="#"></a></div>
                <div class="post-nav">
                    <span class="nav-prev"><a asp-area="uye" asp-action="video" asp-route-id="5">&larr; Önceki Video</a></span> <span class="nav-next"><a asp-area="uye" asp-action="video" asp-route-id="2">Sonraki Video &rarr;</a></span>
                    <div class="clear"></div>
                </div>
            </div>
            <div id="comment-wrapper" class="box">
                <div id="comments">
                    <h3 id="comments-title">Yorumlar</h3>
                    <!--
                    <ol id="singlecomments" class="commentlist">
                        <li class="comment">
                            <div class="comment">
                                <div class="comment-author vcard user frame"> <img src="style/images/avatar.jpg" class="avatar avatar-70 photo" height="70" width="70" alt=""></div>
                                <div class="message">
                                    <span class="reply-link"><a class="comment-reply-link" href="#">Reply</a></span>
                                    <div class="info">
                                        <h2></h2>
                                        <span class="meta"></span>
                                    </div>
                                    <div class="comment-body ">
                                        <p></p>
                                    </div>
                                    <span class="edit-link"></span>
                                </div>
                                <div class="clear"></div>
                            </div>
                            <div class="clear"></div>
                        </li>
                    </ol>

                    -->
                </div>
                <div id="comment-form" class="comment-form">
                    <div id="respond">
                        @{
                            if (User.Identity.IsAuthenticated && User.Claims.FirstOrDefault(f => f.Type == System.Security.Claims.ClaimTypes.Role).Value == "uye")
                            {
                                <!--Yorum Yap-->
                                <h3 id="reply-title">Yorum Bırak</h3>
                                <form asp-action="Resim"  method="post" id="commentform">
                                    <p class="comment-notes"> <span class="required"></span></p>
                                    <p class="comment-form-author">
                                        <label for="author">@User.Claims.FirstOrDefault(f => f.Type == System.Security.Claims.ClaimTypes.Name).Value</label>
                                    </p>
                                    <p class="comment-form-comment">
                                        <label for="comment">Yorum Başlığı</label>
                                        <input asp-for="@Model.Imagecomment.Title" id="comment" class="form-control" cols="45" rows="8" aria-required="true">
                                        <label for="comment">Yorum Metni</label>
                                        <textarea asp-for="@Model.Imagecomment.Text" id="comment" cols="45" rows="8" aria-required="true"></textarea>
                                        <input type="hidden" asp-for="Imagecomment.pictureID" value="@Model.MediaPicture.ID" />
                                    </p>
                                    <p class="form-submit">
                                        <input name="submit" type="submit" id="submit" value="Yorumu Gönder">
                                    </p>
                                </form>
                                <!--Yorum Yap Sonu-->


                            }
                            else
                            {
                                <h3 id="reply-title">Yorum Bırakmak İçin Giriş Yapmalısın</h3>
                            }
                        }


                    </div>
                </div>
            </div>
        </div>


    </div>
    <div class="clear"></div>



</body>

</html>


